# ========================================
# CONFIGURATION EMAIL MANAGER
# ========================================
# Copiez ce fichier vers .env et remplissez vos identifiants

# Email Configuration (OVH Exchange)
EMAIL_HOST=ex.mail.ovh.net
EMAIL_PORT=993
EMAIL_USER=VOTRE_EMAIL@DOMAINE.COM
EMAIL_PASSWORD=VOTRE_MOT_DE_PASSE_ICI
EMAIL_TLS=true

# Claude AI (Anthropic)
ANTHROPIC_API_KEY=VOTRE_CLE_API_CLAUDE_ICI

# Database (SQLite pour tests locaux)
DATABASE_TYPE=sqlite
DATABASE_PATH=./email_manager.db

# Server
PORT=3000
NODE_ENV=development

# Session Secret (générer une chaîne aléatoire pour production)
SESSION_SECRET=dev-secret-change-in-production-12345

# Dashboard Authentication
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=admin123

# Scheduler (minutes)
SCHEDULER_INTERVAL_MINUTES=5

# Security - Protected domains (comma separated)
PROTECTED_DOMAINS=gouv.fr,urssaf.fr,impots.gouv.fr,ameli.fr

# Claude AI Model
CLAUDE_MODEL=claude-3-5-sonnet-20241022
